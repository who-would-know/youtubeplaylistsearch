{
    "manifest_version": 3,
    "name": "YouTube Playlist Search",
    "version": "1.0",
    "action": {
      "default_popup": "search.html",
      "default_icon": {
        "16": "images/icon-16.png",
        "32": "images/icon-32.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
      }
    },
    "background": {
      "service_worker": "service_worker.js"
    },
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ]
  }
  